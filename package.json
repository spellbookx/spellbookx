{
  "name": "@spellbookx/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/spellbookx/spellbookx"
  },
  "bugs": {
    "url": "https://github.com/spellbookx/spellbookx/issues"
  },
  "homepage": "https://github.com/spellbookx/spellbookx#readme",
  "scripts": {
    "lefthook:install": "pnpm lefthook install",
    "watch:lefthook": "pnpm exec onchange 'lefthook.yml' -- pnpm run lefthook:install",
    "build:config": "nx run-many -t build --projects=tag:type:config",
    "prebuild:config": "pnpm install",
    "format:check": "pnpm exec nx format:check --all --verbose",
    "format:write": "pnpm exec nx format:write --all --verbose",
    "lint:projects": "pnpm nx run-many -t lint --parallel=false --verbose",
    "lint:projects:fix": "pnpm nx run-many -t lint --parallel=false --verbose -- --fix",
    "lint:workspace": "pnpm exec eslint .",
    "lint:workspace:fix": "pnpm exec eslint . --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.1",
    "@eslint/markdown": "^6.6.0",
    "@nx/esbuild": "21.2.2",
    "@nx/eslint": "21.2.2",
    "@nx/eslint-plugin": "21.2.2",
    "@nx/js": "21.2.2",
    "@spellbookx/cspell-config": "workspace:^",
    "@spellbookx/eslint-config": "workspace:^",
    "@swc-node/register": "~1.9.2",
    "@swc/core": "~1.5.29",
    "@swc/helpers": "~0.5.17",
    "@types/node": "18.16.9",
    "commitizen": "^4.3.1",
    "cspell": "^9.1.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.19.12",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-flat-config-utils": "^2.1.0",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-sort-imports-requires": "^2.0.0",
    "eslint-plugin-yaml": "^1.1.2",
    "fast-glob": "^3.3.3",
    "jsonc-eslint-parser": "^2.4.0",
    "lefthook": "^1.12.1",
    "nx": "21.2.2",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0",
    "yaml": "^2.8.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
