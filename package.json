{
  "name": "@spellbookx/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/spellbookx/spellbookx"
  },
  "bugs": {
    "url": "https://github.com/spellbookx/spellbookx/issues"
  },
  "homepage": "https://github.com/spellbookx/spellbookx#readme",
  "scripts": {
    "lefthook:install": "pnpm lefthook install",
    "watch:lefthook": "pnpm exec onchange 'lefthook.yml' -- pnpm run lefthook:install",
    "build:config": "pnpm exec nx run-many -t build --projects=tag:type:config",
    "safe:build:config": "./scripts/safe-build-config.sh",
    "prebuild:config": "pnpm install",
    "format:check": "pnpm exec nx format:check --all --verbose",
    "format:write": "pnpm exec nx format:write --all --verbose",
    "lint:projects": "pnpm exec nx run-many -t lint --parallel=false --verbose",
    "lint:projects:fix": "pnpm exec nx run-many -t lint --parallel=false --verbose -- --fix",
    "lint:workspace": "pnpm exec eslint .",
    "lint:workspace:fix": "pnpm exec eslint . --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@eslint/markdown": "^6.6.0",
    "@nx/esbuild": "21.3.5",
    "@nx/eslint": "21.3.5",
    "@nx/eslint-plugin": "21.3.5",
    "@nx/js": "21.3.5",
    "@spellbookx/cspell-config": "workspace:^",
    "@spellbookx/eslint-config": "workspace:^",
    "@swc-node/register": "~1.9.2",
    "@swc/core": "~1.5.29",
    "@swc/helpers": "~0.5.17",
    "@types/node": "18.16.9",
    "commitizen": "^4.3.1",
    "cspell": "^9.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.19.12",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-pnp": "^0.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.4.1",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-sort-imports-requires": "^2.0.0",
    "eslint-plugin-yaml": "^1.1.2",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lefthook": "^1.12.2",
    "nx": "21.3.5",
    "onchange": "^7.1.0",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "yaml": "^2.8.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
