{
  "name": "root",
  "version": "0.8.1",
  "private": true,
  "author": {
    "name": "Davide Di Criscito"
  },
  "scripts": {
    "build": "turbo run build",
    "fmt": "pnpm dlx prettier --ignore-unknown --write .",
    "lint": "pnpm dlx eslint --no-warn-ignored --fix .",
    "lint:fmt": "pnpm run lint && pnpm run fmt",
    "prepare": "lefthook install",
    "release": "LEFTHOOK=\"0\" release-it",
    "turbo:update": "pnpm dlx @turbo/codemod@latest update --force"
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@cspell/cspell-types": "^9.6.2",
    "@dcdavidev/tsconfig": "^0.1.0",
    "@prettier/plugin-xml": "^3.4.2",
    "@release-it/conventional-changelog": "^10.0.4",
    "@turbo/gen": "^2.7.6",
    "commitizen": "^4.3.1",
    "commitlint-config-spellbookx": "workspace:*",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cspell": "^9.6.2",
    "cspell-config-spellbookx": "workspace:*",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.2",
    "eslint-plugin-spellbookx": "workspace:*",
    "lefthook": "^2.0.15",
    "prettier": "^3.7.4",
    "prettier-config-spellbookx": "workspace:*",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-properties": "^0.3.1",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-toml": "^2.0.6",
    "release-it": "^19.2.4",
    "turbo": "^2.8.10",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "engines": {
    "node": ">=24"
  }
}
